{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ activity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Pictogram</th>
                <td>{{ activity.pictogram }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ activity.picture }}</td>
            </tr>
            <tr>
                <th>Focus</th>
                <td>{{ activity.focus ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">back to list</a>

    <a href="{{ path('activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('admin_activity/_delete_form.html.twig') }}
{% endblock %}
