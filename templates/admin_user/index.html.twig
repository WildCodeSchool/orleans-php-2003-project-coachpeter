{% extends 'base_admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-center text-primary">Liste des utilisateurs</h1>

    <table class="table table-striped w-75 text-center m-auto table-hover table-borderless">
        <thead class="bg-primary text-light">
        <tr class="row mx-0">
            <th class="col-2">Nom</th>
            <th class="col-2">Prénom</th>
            <th class="col-2">Roles</th>
            <th class="col-2">Téléphone</th>
            <th class="col-2">Email</th>
            <th class="col-1"></th>
            <th class="col-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="row mx-0">
                <td class="col-2">{{ user.lastname }}</td>
                <td class="col-2">{{ user.firstname }}</td>

                <td class="col-2"> {{ user.roles|userRole}}</td>
                <td class="col-2">{{ user.phone|formatPhoneFr}}</td>
                <td class="col-2">{{ user.email }}</td>
                <td class="col-1">
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><svg class="bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg></a>
                <td class="col-1">
                    <a href="">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
