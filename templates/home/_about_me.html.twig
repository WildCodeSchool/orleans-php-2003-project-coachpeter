
<section class="pt-4 pb-4">
    <div class="container-fluid">
        <h2 class="text-center mb-5"><span class="text-primary">
                À PROPOS</span> <span class="font-weight-bold text-secondary">DE MOI</span>
        </h2>
        <div class="row">
            <div class="align-items-start col-xl-6 col-lg-6 col-md-12 col-sm-12 d-flex justify-content-center">
                {% if coachInfo %}
                <img class=" img-coach-about-me-home" src="{{ vich_uploader_asset(coachInfo, 'imageFile') }}"
                     alt="Coach Peter">
                {% endif %}
            </div>
            <div class="col-lg-6 c">
                <h3 class="coach-name-about-me font-weight-bold">
                    <span class="text-primary">PETER</span>
                    <span class="text-secondary">DIONISIO</span>
                </h3>
                <p class="font-italic">
                    "{{ coachInfo.catchline ?? '' }}"
                </p>
                <div>
                    <ul class="nav mt-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active text-primary" id="home-tab" data-toggle="tab"
                               href="#home" role="tab" aria-controls="home" aria-selected="true">
                                Présentation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Ma Philosophie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" id="contact-tab" data-toggle="tab" href="#contact" role="tab"
                               aria-controls="contact" aria-selected="false">Mes Certifications</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        {{ (coachInfo.presentation ?? '')|nl2br }}
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        {{ (coachInfo.philosophy ?? '')|nl2br }}
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            {% for degree in degrees %}
                                   <div>
                                       <span class="text-secondary">{{ degree.startDate }} -
                                       {{ degree.endDate }}</span>
                                       <span class="text-primary">{{ degree.name|upper }},</span>
                                        {{ degree.organism }}:
                                       <span>{{ degree.description }}</span>
                                   </div>
                            {% endfor %}
                    </div>
                    <div class="text-center">
                        <a href="{{ path('app_contact') }}" type="button"
                           class="mt-5 btn btn-light border-primary text-primary">
                            ME CONTACTER
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

